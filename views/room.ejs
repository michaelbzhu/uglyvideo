    <title>Ugly Video</title>
    <style>
      html,
      body {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
          Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue",
          sans-serif;
      }

      #video-grid {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: space-evenly;
        align-items: center;
        height: 100vh;
        width: 100vw;
      }

      video {
        width: 200px;
        height: 200px;
        object-fit: cover;
        transform: scale(1) rotateY(180deg);
        -webkit-transform: scale(1) rotateY(180deg); /* Safari and Chrome */
        -moz-transform: scale(1) rotateY(180deg); /* Firefox */
        -webkit-transition: all 0.1s ease-in-out;
        -moz-transition: transform 0.1s ease-in-out;
        -ms-transition: transform 0.1s ease-in-out;
        -o-transition: transform 0.1s ease-in-out;
        transition: transform 0.1s ease-in-out;
        border-radius: 50%;
        justify-self: center;
        z-index: 10;
        position: absolute;
        cursor: move;
        outline: none;
      }

      canvas,
      #canvas-container {
        position: absolute;
        top: 0px;
        left: 0px;
        z-index: 1;
        width: 100vw;
        height: 100vh;
      }

      #navbar {
        position: absolute;
        top: 0px;
        margin: 10px;
        width: 100%;
        z-index: 9;
        display: flex;
        justify-content: space-evenly;
        align-items: center;
      }

      button {
        padding: 10px 20px;
        border-radius: 4px;
        font-weight: 600;
        border: none;
        font-size: large;
      }

      #copybutton {
        display: flex;
      }

      #tooltip {
        margin: 5px;
        width: 100px;
        height: 20px;
        text-align: center;
      }

      input {
        font-size: x-large;
      }

      img {
        max-width: 150px;
      }
    </style>
  </head>
  <body>
    <div id="navbar">
      <div id="decorate">
        <input type="text" placeholder="image url" id="imageURL" />
        <button id="decorateButton">paste!</button>
      </div>
      <button id="surpriseButton">surprise!</button>
      <h3>Ugly Video</h3>
      <div id="copybutton">
        <button onclick="CopyLink()" onmouseout="outFunc()">invite ppl!</button>
        <h3 id="tooltip"></h3>
      </div>
      <div id="clearscreen">
        <button onclick="canvas.clear()">clear screen</button>
      </div>
    </div>
    <div id="video-grid"></div>
    <canvas id="my-canvas">Your browser doesn't support canvas</canvas>
  </body>
</html>
